            $amount = floatval($_POST['amount']);
            $exchangeRate = 82.5; // Example hard-coded exchange rate
            $convertedAmount = $amount * $exchangeRate;

            echo "<div class='result'>Amount in INR: â‚¹" . number_format($convertedAmount, 2) . "</div>";
